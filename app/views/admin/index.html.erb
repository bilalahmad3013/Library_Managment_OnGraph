<h3 style="margin-left:38%;margin-top:10px">There are a total of <%= @books.length %> books.</h3>
<a href="/" class="card-link" style="margin-left:45%">Back to Home Page</a>
<div class="container" style="margin-top:50px">  
  <% @books.each do |book| %>
   
    <div class="card mb-3" style="width: 300px; display: inline-block;">
      <div class="card-header">Title-<%= book.title %></div>
      <div class="card-body">
        <h5 class="card-title">Author-<%= book.author %></h5>
        <p class="card-text">Pages-<%= book.pages %></p>
        <%= link_to 'Edit', edit_admin_path(book) %>
        <%= link_to 'Delete', admin_delete_book_path(book), method: :delete, data: { confirm: 'Are you sure you want to delete this book?' } %>
        <%= link_to 'click here to see all students', admin_book_students_path(book_id: book.id) %>


      </div>
    </div>
  <% end %>

</div>
